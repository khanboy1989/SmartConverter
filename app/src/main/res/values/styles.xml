<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tab_item_text_color</item>
    </style>

    <style name="curr_detail_text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textColor">@color/curr_label_detail_text_color</item>
    </style>

    <style name="curr_text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/curr_label_text_color</item>
    </style>
</resources>
